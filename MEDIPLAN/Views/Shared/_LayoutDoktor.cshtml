@{
    Layout = null;
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Doktor Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        .nav-link.active {
            background-color: #ffffff !important;
            color: #0d6efd !important;
            border-radius: 10px;
            font-weight: 500;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand img {
            height: 40px;
            width: auto;
            border-radius: 8px;
            padding: 2px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.05);
            }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Doktor/Dashboard">
                <img src="~/images/logo.jpg" alt="Logo" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(currentAction == "Dashboard" ? "active" : "")" href="/Doktor/Dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentAction == "Termini" ? "active" : "")" href="/Doktor/Termini">Moji Termini</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentAction == "Recenzije" ? "active" : "")" href="/Doktor/Recenzije">Recenzije</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentAction == "FormaNalaza" ? "active" : "")" href="/Doktor/FormaNalaza">Forma Nalaza</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <a href="/Account/Logout" class="btn btn-outline-light">Logout</a>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>