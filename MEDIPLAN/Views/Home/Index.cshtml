@{
    ViewData["Title"] = "Početna";
}

<div class="hero-section">


    <style>
        .hero-section {
            position: relative;
            height: 90vh;
            background-image: url('/images/homepage.jpg'); /* Zamijeni ako imaš drugi naziv slike */
            background-size: cover;
            background-position: center;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-color: rgba(0, 60, 100, 0.5); /* Tamnoplava s većom prozirnošću */
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

            .hero-content h1 {
                font-size: 3.5rem;
                font-weight: bold;
            }

        .medi-highlight {
            color: #00bfff; /* Svijetloplava boja za “MediPlan” */
        }
    </style>

    <div class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1>Dobrodošli u <span class="medi-highlight">MediPlan!</span></h1>
        </div>
    </div>


    <div class="position-fixed bottom-0 end-0 m-4">
        <a href="@Url.Action("Index", "Recenzije")" class="btn btn-info btn-lg shadow">
            📝 Recenzije klinike
        </a>
    </div>

</div>
