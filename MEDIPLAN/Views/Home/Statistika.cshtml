@model StatistikaViewModel
@{
    ViewData["Title"] = "Statistika";
}

<h2>Specijalistički pregledi po mjesecima</h2>
<table class="table">
    <thead>
        <tr>
            <th>Godina</th>
            <th>Mjesec</th>
            <th>Broj pregleda</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.PreglediPoMjesecima)
        {
            <tr>
                <td>@p.Godina</td>
                <td>@p.Mjesec</td>
                <td>@p.BrojPregleda</td>
            </tr>
        }
    </tbody>
</table>

<h2>Produktivnost doktora</h2>
<table class="table">
    <thead>
        <tr>
            <th>Doktor</th>
            <th>Broj pregleda</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.ProduktivnostDoktora)
        {
            <tr>
                <td>@d.ImePrezime</td>
                <td>@d.BrojPregleda</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Ukupno jedinstvenih pacijenata:</strong> @Model.UkupnoPacijenata</p>
