@model RecenzijaViewModel

<h2>Ostavite recenziju za vaš termin kod @Model.DoktorIme</h2>

<form asp-action="OstaviRecenziju" method="post">
    <input type="hidden" asp-for="TerminId" />
    <input type="hidden" asp-for="DoktorId" />

    <div class="form-group">
        <label asp-for="OcjenaDoktor"></label>
        <select asp-for="OcjenaDoktor" class="form-control" asp-validation-for="OcjenaDoktor">
            <option value="">-- Odaberite ocjenu --</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i" selected="@(Model.OcjenaDoktor == i)">@i</option>
            }
        </select>
        <span asp-validation-for="OcjenaDoktor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OcjenaKlinika"></label>
        <select asp-for="OcjenaKlinika" class="form-control" asp-validation-for="OcjenaKlinika">
            <option value="">-- Odaberite ocjenu --</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i" selected="@(Model.OcjenaKlinika == i)">@i</option>
            }
        </select>
        <span asp-validation-for="OcjenaKlinika" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tekst"></label>
        <textarea asp-for="Tekst" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Tekst" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Objavi recenziju</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
