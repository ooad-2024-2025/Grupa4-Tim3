@model List<MEDIPLAN.Models.Notifikacije>

@{
    ViewData["Title"] = "Moje Notifikacije";
}

<h2>Moje Notifikacije</h2>

@if (!Model.Any())
{
    <p class="text-muted">Trenutno nemate notifikacija.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Poruka</th>
                <th>Vrijeme</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notifikacija in Model)
            {
                <tr class="@(notifikacija.Procitano ? "" : "table-warning")">
                    <td>@notifikacija.Poruka</td>
                    <td>@notifikacija.VrijemeKreiranja.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@(notifikacija.Procitano ? "Pročitano" : "Novo")</td>
                </tr>
            }
        </tbody>
    </table>
}
