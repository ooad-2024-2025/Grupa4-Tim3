@model LoginViewModel

@{
    ViewData["Title"] = "Prijava";
}

@if (TempData["Greska"] != null)
{
            <div class="alert alert-danger text-center">
        @TempData["Greska"]
            </div>
}

<h2 class="mb-4 text-center">Prijava</h2>

<div class="d-flex justify-content-center">
    <form asp-action="Login" method="post" class="p-4 border rounded shadow-sm" style="width: 320px; background-color: #f8f9fa;">
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" placeholder="Unesite korisničko ime" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Lozinka" class="form-label"></label>
            <input asp-for="Lozinka" type="password" class="form-control" placeholder="Unesite lozinku" />
            <span asp-validation-for="Lozinka" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Prijavi se</button>
    </form>
</div>

<div class="text-center mt-3">
    <p class="text-muted" style="font-size: 0.95rem;">
        Nemate profil? 
        <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Kreirajte profil</a>
    </p>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
