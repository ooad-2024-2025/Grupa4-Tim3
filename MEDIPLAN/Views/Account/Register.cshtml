@model RegisterViewModel

@{
    ViewData["Title"] = "Registracija";
}

<h2 class="mb-4 text-center">Registracija</h2>

<div class="d-flex justify-content-center">
    <form asp-action="Register" method="post" class="p-4 border rounded shadow-sm" style="width: 400px; background-color: #f9f9f9;">
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" placeholder="Unesite korisničko ime" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ime" class="form-label"></label>
            <input asp-for="Ime" class="form-control" placeholder="Unesite ime" />
            <span asp-validation-for="Ime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Prezime" class="form-label"></label>
            <input asp-for="Prezime" class="form-control" placeholder="Unesite prezime" />
            <span asp-validation-for="Prezime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Unesite email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Lozinka" class="form-label"></label>
            <input asp-for="Lozinka" type="password" class="form-control" placeholder="Unesite lozinku" />
            <span asp-validation-for="Lozinka" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PotvrdiLozinku" class="form-label"></label>
            <input asp-for="PotvrdiLozinku" type="password" class="form-control" placeholder="Potvrdite lozinku" />
            <span asp-validation-for="PotvrdiLozinku" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="DatumRodjenja" class="form-label"></label>
            <input asp-for="DatumRodjenja" type="date" class="form-control" />
            <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success w-100">Registruj se</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
