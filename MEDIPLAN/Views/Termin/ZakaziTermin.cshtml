@model MEDIPLAN.Models.Termini

<h2>Zakazi novi Termini</h2>

<form asp-action="Zakazi" method="post">
    <div class="form-group">
        <label asp-for="DatumVrijemePocetak">Datum i vrijeme početka</label>
        <input asp-for="DatumVrijemePocetak" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DatumVrijemeKraj">Datum i vrijeme kraja</label>
        <input asp-for="DatumVrijemeKraj" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DoktorId">Doktor ID</label>
        <input asp-for="DoktorId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PacijentId">Pacijent ID</label>
        <input asp-for="PacijentId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Zakaži</button>
</form>