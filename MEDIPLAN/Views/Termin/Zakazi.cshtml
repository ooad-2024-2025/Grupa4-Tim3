@model MEDIPLAN.Models.TerminModel

@{
    ViewData["Title"] = "Zakaži Termin";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f0f2f5;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: calc(100vh - 60px);
        padding: 40px 20px;
        box-sizing: border-box;
    }

    .card {
        background: white;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        width: 100%;
        max-width: 420px;
        box-sizing: border-box;
    }

        .card h2 {
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

    form label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #555;
    }

    form select, form input[type="text"] {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 18px;
        border: 1.8px solid #ccc;
        border-radius: 6px;
        font-size: 15px;
        transition: border-color 0.3s ease;
        box-sizing: border-box;
    }

        form select:focus, form input[type="text"]:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
        }

    .field-validation-error {
        color: #d93025;
        font-size: 13px;
        margin-top: -14px;
        margin-bottom: 14px;
        display: block;
    }

    button[type="submit"] {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        border: none;
        border-radius: 6px;
        color: white;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<div class="form-container">
    <div class="card">
        <h2>Zakažite Termin</h2>

        @if (TempData["Izmjena"] != null)
        {
            <div class="alert alert-warning text-center mb-3" style="font-size: 14px;">
                @TempData["Izmjena"]
            </div>
        }

        @Html.ValidationSummary(true, "", new { @class = "field-validation-error" })

        <form method="post" asp-action="Zakazi">
            @Html.AntiForgeryToken()

            <label for="doktor">Odaberite doktora:</label>
            <select asp-for="DoktorId" asp-items="ViewBag.Doktori" id="doktor"></select>
            <span asp-validation-for="DoktorId" class="field-validation-error"></span>

            <label for="datum">Odaberite datum i vrijeme:</label>
            <input asp-for="Datum" type="text" id="datum" placeholder="Odaberite datum i vrijeme..." />
            <span asp-validation-for="Datum" class="field-validation-error"></span>

            <label for="lokacija">Odaberite lokaciju:</label>
            <select asp-for="Lokacija" asp-items="ViewBag.Lokacije" id="lokacija"></select>
            <span asp-validation-for="Lokacija" class="field-validation-error"></span>

            <button type="submit" class="btn btn-primary">
                @(Model.Id > 0 ? "Izmijeni" : "Zakaži")
            </button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

<script>
    const picker = flatpickr("#datum", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        altInput: true,
        altFormat: "d.m.Y. H:i",
        time_24hr: true,
        minuteIncrement: 60,
        minDate: "today",
        defaultHour: 8,
        minTime: "08:00",
        maxTime: "15:00",
        disable: [
            function(date) {
                const hour = date.getHours();
                return false; // NE onemogućuj prikaz datuma u kalendaru
            }
        ],
        onReady: updateTimeWindow,
        onChange: updateTimeWindow,
        // >>> OVO JE KLJUČNO ZA PRIKAZ KALENDARA <<<
        inline: false,
        allowInput: true
    });

    function updateTimeWindow(selectedDates, dateStr, instance) {
        const now = new Date();
        const selectedDate = selectedDates[0];

        if (!selectedDate) return;

        const isToday = selectedDate.toDateString() === now.toDateString();

        if (isToday) {
            const nextFullHour = Math.ceil(now.getHours() + (now.getMinutes() > 0 ? 1 : 0));
            const validHour = Math.max(8, nextFullHour);

            instance.set('minTime', validHour + ":00");
            instance.set('maxTime', "15:00");
        } else {
            instance.set('minTime', "08:00");
            instance.set('maxTime', "15:00");
        }
    }
</script>